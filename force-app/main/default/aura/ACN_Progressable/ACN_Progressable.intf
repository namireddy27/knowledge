<aura:interface description="Use this lightning interface to provide support for process progress based experience.">
    <aura:attribute name="flowProgressPercent" type="Integer" access="global" default="0" />
    <aura:attribute name="flowProgressCurrentStepNumber" type="Integer" access="global" default="0" />
    <aura:attribute name="flowProgressCurrentStep" type="String" access="global" default="0" />
    <aura:attribute name="flowProgressTotalSteps" type="Integer" access="global" default="0" />
    <aura:attribute name="flowSteps" type="Integer[]" access="global" default="[]" />
    
    <aura:registerEvent name="progressChanged" type="c:ACN_ProgressChanged" />
    <aura:registerEvent name="progressContinuationRequested" type="c:ACN_ProgressContinuationRequested" />
</aura:interface>